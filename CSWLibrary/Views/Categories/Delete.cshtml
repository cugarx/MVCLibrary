@model CSWLibrary.Category

@{
    ViewBag.Title = "Delete";
}
<script language="javascript">
    if('@ViewData["Message"]'!='')
    {
        alert('@ViewData["Message"]');
    }
</script>

<br />
<br /><br />

<fieldset style="border: thin solid #AAA; color: #440000; background-color: #FFF; margin-top:-8px">
    <legend style="background-color: #017DC3; color: white; width:150px;">
        Delete Category
    </legend>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
                
            </div>
        }
    </div>
</fieldset>

@Html.ActionLink("Back to Categories", "Index")
