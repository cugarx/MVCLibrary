    <legend style="background-color: #017DC3; color: white; width:150px;">
        Delete Book
    </legend>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ISBN)
