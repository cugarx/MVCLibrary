@model CSWLibrary.Author

@{
    ViewBag.Title = "Delete";
}


<br /><br />
<br />

<script language="javascript">
    if('@ViewData["Message"]'!='')
    {
        alert('@ViewData["Message"]');
    }
</script>

<fieldset style="border: thin solid #AAA; color: #440000; background-color: #FFF; margin-top:-8px">
    <legend style="background-color: #017DC3; color: white; width:150px;">
        Delete Author
    </legend>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
               Last Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                Country
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Country.Name)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
              
            </div>
        }
    </div>
</fieldset>
@Html.ActionLink("Back to Authors", "Index")